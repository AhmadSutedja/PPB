<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearSkor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/skorAdapter"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#CF3232"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/gambarSkor"
            android:layout_width="70dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/waktuSkor"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginStart="70dp"
            android:gravity="center"
            android:text="09:01"
            android:textColor="#630E0E"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/namaSkor"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginStart="130dp"
            android:gravity="center"
            android:text="Jari Kelingking Kanan"
            android:textColor="#630E0E"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jumlahKlik"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="330dp"
            android:gravity="center"
            android:text="Jumlah"
            android:textColor="#630E0E"
            android:textSize="20sp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>
</LinearLayout>